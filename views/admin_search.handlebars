<div class="pad">
    <div class="">
        <form method="get" action="/admin/search">
            <input type="text"  name="key" placeholder="输入关键词" style="width: 80%;" autofocus>
            <input type="submit" class="btn btn-info">
        </form>
    </div>
    <div class="page">
        <a href="/admin/search/?page=1&key={{key}}">首页</a>
        <a href="/admin/search/?page={{pagePrev}}&key={{key}}">上一页</a>
        <span class="">第{{page}}页 [共{{totalPage}}页，{{totalNumber}}条]</span>
        <a href="/admin/search/?page={{pageNext}}&key={{key}}">下一页</a>
        <a href="/admin/search/?page={{totalPage}}&key={{key}}">尾页</a>
    </div>

    <table class="data mt-10" width="100%" border="0" cellpadding="0" cellspacing="0">
        <tr>
            <th width="5%"><input type="checkbox" id="tick-all"></th>
            <th width="20%">缩略图</th>
            <th width="45%">标题</th>
            <th width="30%">操作 [<a href="javascript:void(0);" class="red" id="del-selected">-删除所选</a>]</th>
        </tr>

        {{#each results}}
        <tr>
            <td>
                <input type="checkbox" class="sel" data-id="{{id}}">
            </td>
            <td>
                {{#if noImg}}
                <span>nopic</span>
                {{else}}
                <a data-url="/admin/delImg/" data-id="{{id}}" href="javascript:void(0);" class="delImage"><img class="thumb" src="http://grab.xumohan.com/images/upload/smallPhoto/{{{file}}}"></a>
                {{/if}}

            </td>
            <td>
                <a href="/news/?id={{id}}" target="_blank">{{{title}}}</a> <br>
                [{{datetime}}]
            </td>
            <td align="center">
                <a href="/admin/modify/?id={{id}}&sort={{sort}}&page={{../page}}" class="green">修改</a> &nbsp;&nbsp;
                <a data-title="{{title}}" data-url="/admin/del/" data-id="{{id}}"
                   href="javascript:void(0);" class="red delConfirm">删除</a>

            </td>
        </tr>
        {{/each}}

    </table>

    <div class="page">
        <a href="/admin/search/?page=1&key={{key}}">首页</a>
        <a href="/admin/search/?page={{pagePrev}}&key={{key}}">上一页</a>
        <span class="">第{{page}}页 [共{{totalPage}}页，{{totalNumber}}条]</span>
        <a href="/admin/search/?page={{pageNext}}&key={{key}}">下一页</a>
        <a href="/admin/search/?page={{totalPage}}&key={{key}}">尾页</a>
    </div>

</div>

<div id="ajaxTips">正在删除...</div>
